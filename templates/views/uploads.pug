extends ../layouts/default

block content
    .container
        .row
            .col-sm-8
                h4
                    if (path && path !== '/')
                        a(href= '/uploads/' + upath) &uarr;
                    | &nbsp;&nbsp;#{'/' + path}
            .col-sm-4
                form(method='post')
                    button.btn.btn-link(type='submit', action='/uploads/' + path) Ordner Runterladen
        if directories.length == 0
            p.pinfo Keine Dateien gefunden
        table.table.item-list(cellpadding=0 cellspacing=0)
            colgroup
                col(width=26)
                col(width="50%")
                col(width="50%")
            thead
                tr
                    th
                    th Datei
                    th Erstellt
            tbody
                -var re = /(?:\.([^.]+))?$/;
                each d in directories
                    -var filename = '/uploads/' + (path ? path + '/' : '') + d.filename
                    tr
                        td
                            span
                                if d.directory
                                    i.fa.fa-folder
                                else
                                    i.fa.fa-file
                        td
                            a(href= filename)= d.filename
                        td= dateTimeStr(new Date(d.meta.birthtime)) || ''
        //- ul
            each d in directories
                -var filename = '/uploads/' + (path ? path + '/' : '') + d
                li
                    a(href= filename)
                        span
                            if re.exec(d)[1] === undefined
                                i.fa.fa-folder
                            else
                                i.fa.fa-file
                        | #{d}

block css
    style.

        ul {
            list-style: none;
            margin-top: 32px;
            padding-left: 0;
        }
        .pinfo {
            margin-top: 32px;
        }
        ul li {
            line-height: 26px;
            font-size: 16px;
        }
        li span {
            display: inline-block;
            width: 24px;
        }

